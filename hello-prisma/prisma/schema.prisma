generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  username    String   @id @unique
  nome        String
  email       String @unique
  senha       String
  tipo        String
  data_nasc   String
  idade       Int
  inscricoes  Inscricao[]
  eventos     Evento[]
}


model Inscricao {
  id           Int  @id @default(autoincrement())
  data         String
  hora         String
  user         Usuario @relation(fields: [user_author], references: [username])
  user_author  String
  evento       Evento @relation(fields: [id_evento], references: [id])
  id_evento    Int
}

model Evento {
  id                Int       @id @default(autoincrement())
  nome              String
  data              String
  hora              String
  categoria         String
  class_indicativa  Int
  descricao         String
  capacidade        Int
  duracao           Int
  user              Usuario   @relation(fields: [user_author], references: [username])
  user_author       String
  local             Local     @relation(fields: [id_local], references: [id])
  id_local          Int
  servico           Servico   @relation(fields: [id_servico], references: [id])
  id_servico        Int
  inscricoes        Inscricao[]
}


model Local{
  id          Int  @id @default(autoincrement())
  nome        String
  categoria   String?
  descricao   String
  capacidade  Int
  endereco    String
  eventos     Evento[]
}

model Servico{
  id         Int  @id @default(autoincrement())
  nome       String
  categoria  String
  descricao  String
  eventos    Evento[]
}


